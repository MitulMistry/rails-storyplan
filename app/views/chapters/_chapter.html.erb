<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><strong>CH: <%= link_to chapter.name, chapter %></strong> - from <%= link_to chapter.story.name, chapter.story %> by <%= link_to chapter.user.username, writer_path(chapter.user) %><% if chapter.currently_writing %> <%= content_tag :span, "Currently Writing", class: ["label", 'label-success'] %><br><% end %></h3>
  </div>
  <div class="panel-body">
    <p><strong>Objective: </strong><%= chapter_truncated_objective(chapter) %></p>
    <p><strong>Target word count: </strong><%= chapter.target_word_count %></p>
    <p><strong>Overview: </strong><%= chapter_truncated_overview(chapter) %></p>
  </div>
</div>
