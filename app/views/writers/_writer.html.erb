<div class="card card-block">
  <h4 class="card-title"><%= link_to writer.username, writer_path(writer), class: "card-link" %></h4>
  <p class="card-text"><%= writer_truncated_bio(writer) %></p>
  <% if !writer.genres.empty? %>
  <p class="card-text"><strong>Genres:</strong>
    <% writer.genres.each do |genre| %>
      <%= link_to genre.name, genre, class: "badge badge-genre" %>
    <% end %>
  </p>
  <% end %>
</div>
