<%= render partial: 'layouts/form_errors', locals: { item: @writer } %>

<%= form_for(@writer, url: update_profile_path) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>

  <div class="field">
    <%= f.label "Full name (optional)" %><br />
    <%= f.text_field :full_name %>
  </div>

  <div class="field">
    <%= f.label "Bio (optional)" %><br />
    <%= f.text_area :bio, size: "40x4" %>
  </div>

  <div class="actions"><%= f.submit 'Submit', class: 'btn btn-primary' %></div>
<% end %>
