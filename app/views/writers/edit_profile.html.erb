<%= render partial: 'layouts/form_errors', locals: { item: @writer } %>

<h1>Edit Profile</h1>

<%= form_for(@writer, url: update_profile_path, html: {multipart: true}) do |f| %>
  <div class="form-group">
    <%= f.label "Avatar (optional) - Must be 400x400" %>
    <%= f.file_field :avatar, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Full name (optional)" %>
    <%= f.text_field :full_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Bio (optional)" %>
    <%= f.text_area :bio, size: "40x4", class: "form-control" %>
  </div>

  <br>
  <div class="actions">
    <%= f.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
