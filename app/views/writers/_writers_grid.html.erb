<% counter = 0 %>
<% writers.each_with_index do |writer, index| %>
  <% if counter == 0 %><div class="row"><% end %>
  <%= render partial: 'writers/writer', locals: { writer: writer } %>
    <% counter += 1 %>
  <% if counter == 3 || (index + 1) == writers.count %></div><!--/.row--><% counter = 0 %><% end %>
<% end %>
