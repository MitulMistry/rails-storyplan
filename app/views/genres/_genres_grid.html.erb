<% counter = 0 %>
<% genres.each_with_index do |genre, index| %>
  <% if counter == 0 %><div class="row"><% end %>
  <%= render partial: 'genres/genre', locals: { genre: genre } %>
    <% counter += 1 %>
  <% if counter == 4 || (index + 1) == genres.count %></div><!--/.row--><% counter = 0 %><% end %>
<% end %>
