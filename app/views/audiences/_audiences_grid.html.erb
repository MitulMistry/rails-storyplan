<% counter = 0 %>
<% audiences.each_with_index do |audience, index| %>
  <% if counter == 0 %><div class="row"><% end %>
  <%= render partial: 'audiences/audience', locals: { audience: audience } %>
    <% counter += 1 %>
  <% if counter == 4 || (index + 1) == audiences.count %></div><!--/.row--><% counter = 0 %><% end %>
<% end %>
