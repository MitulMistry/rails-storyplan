<div class="card story-card">
  <%= link_to (story_card_cover(story)), story %>
  <div class="card-body">
    <h4 class="card-title"><%= link_to story.name, story, class: "card-link" %></h4>
    <p class="card-text-author"><strong>By:</strong> <%= link_to story.user.username, writer_path(story.user) %></p>
    <% if story.overview? %><p class="card-text"><%= story_truncated_overview(story) %></p><% end %>
    <% if !story.genres.empty? && !story.audiences.empty? %>
    <p class="card-text">
      <% story.audiences.each do |audience| %>
        <%= link_to audience.name, audience, class: "badge badge-audience" %>
      <% end %>
      <% story.genres.each do |genre| %>
        <%= link_to genre.name, genre, class: "badge badge-genre" %>
      <% end %>
    </p>
    <% end %>
  </div>
</div>
