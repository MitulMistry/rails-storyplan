<div class="row">
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src=".#" alt="...">
      <div class="caption">
        <h3><%= link_to story.name, story %></h3>
        <p>Written by:<%= story.user.try(:email) %></p>
        <p>Target word count: <%= story.target_word_count %></p>
        <p>Target audience: <%= story.target_audience %></p>
        <p>Overview: <%= story.overview %></p>
        <p>Genres:
          <% story.genres.each do |genre| %>
          <%= link_to genre.name, genre %>
          <% end %>
        </p>
      </div>
    </div>
  </div>
</div>