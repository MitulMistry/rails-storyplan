<%= render partial: 'layouts/form_errors.html.erb', locals: { item: story } %>

<%= form_for(story) do |f| %>

  <div class="field"><%= f.label :name %><br>
  <%= f.text_field :name %></div>

  <div class="field"><%= f.label :target_word_count %><br>
  <%= f.text_field :target_word_count %></div>

  <div class="field"><%= f.label "Target Audiences" %><br>
  <%= f.collection_check_boxes :audience_ids, Audience.all.order("name ASC"), :id, :name %></div>

  <div class="field"><%= f.label :overview %><br>
  <%= f.text_area :overview, size: "60x4" %></div>

  <div class="field"><%= f.label "Genres" %><br>
  <%= f.collection_select :genre_ids, Genre.all.order("name ASC"), :id, :name, {}, {:multiple => true} %></div>

  <br>

  <div class="actions"><%= f.submit 'Submit', :class => 'btn btn-primary' %></div>

<% end %>
