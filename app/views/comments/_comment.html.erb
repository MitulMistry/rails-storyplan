<div class="card card-body">
  <p class="card-text"><%= image_tag comment.user.avatar.url(:thumb), class: "img-fluid" %><%= link_to comment.user.username, writer_path(comment.user), class: "card-link" %><span class="text-muted"> - <%= readable_date(comment.created_at) %></span></p>
  <p class="card-text"><%= comment.content %></p>
  <% if comment.user == current_user %>
  <div>
    <%= link_to "Edit", edit_comment_path(comment), class: "btn btn-secondary btn-sm", role: "button" %>
    <%= link_to "Delete", comment, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-secondary btn-sm", role: "button" %>
  </div>
  <% end %>
</div>
